@page "/blazorise-sample"
@rendermode InteractiveServer

<PageTitle>Blazorise 範例</PageTitle>

<Container Fluid>
    <Heading Size="HeadingSize.Is1">Blazorise 元件範例</Heading>

    <Card Margin="Margin.Is3.FromTop">
        <CardHeader>
            <CardTitle>表單範例</CardTitle>
        </CardHeader>
        <CardBody>
            <Field>
                <FieldLabel>姓名</FieldLabel>
                <TextEdit @bind-Text="@name" Placeholder="請輸入您的姓名" />
            </Field>

            <Field>
                <FieldLabel>電子郵件</FieldLabel>
                <TextEdit @bind-Text="@email" Role="TextRole.Email" Placeholder="請輸入電子郵件" />
            </Field>

            <Field>
                <FieldLabel>備註</FieldLabel>
                <MemoEdit @bind-Text="@notes" Rows="3" Placeholder="請輸入備註" />
            </Field>

            <Button Color="Color.Primary" Clicked="@OnSubmit">
                <Icon Name="IconName.Save" />
                送出
            </Button>
        </CardBody>
    </Card>

    <Card Margin="Margin.Is3.FromTop">
        <CardHeader>
            <CardTitle>按鈕範例</CardTitle>
        </CardHeader>
        <CardBody>
            <Buttons>
                <Button Color="Color.Primary">主要按鈕</Button>
                <Button Color="Color.Secondary">次要按鈕</Button>
                <Button Color="Color.Success">成功按鈕</Button>
                <Button Color="Color.Danger">危險按鈕</Button>
                <Button Color="Color.Warning">警告按鈕</Button>
                <Button Color="Color.Info">資訊按鈕</Button>
            </Buttons>
        </CardBody>
    </Card>

    <Card Margin="Margin.Is3.FromTop">
        <CardHeader>
            <CardTitle>警示訊息範例</CardTitle>
        </CardHeader>
        <CardBody>
            <Alert Color="Color.Success" Visible>
                <Icon Name="IconName.Check" />
                這是一個成功訊息！
            </Alert>

            <Alert Color="Color.Info" Visible>
                <Icon Name="IconName.InfoCircle" />
                這是一個資訊訊息！
            </Alert>

            <Alert Color="Color.Warning" Visible>
                <Icon Name="IconName.ExclamationTriangle" />
                這是一個警告訊息！
            </Alert>

            <Alert Color="Color.Danger" Visible>
                <Icon Name="IconName.Times" />
                這是一個錯誤訊息！
            </Alert>
        </CardBody>
    </Card>

    @if (!string.IsNullOrEmpty(submittedMessage))
    {
        <Card Margin="Margin.Is3.FromTop">
            <CardHeader>
                <CardTitle>表單送出結果</CardTitle>
            </CardHeader>
            <CardBody>
                <Alert Color="Color.Info" Visible>
                    @submittedMessage
                </Alert>
            </CardBody>
        </Card>
    }
</Container>

@code {
    private string name = string.Empty;
    private string email = string.Empty;
    private string notes = string.Empty;
    private string submittedMessage = string.Empty;

    private void OnSubmit()
    {
        submittedMessage = $"已收到您的資料：姓名 = {name}, 電子郵件 = {email}, 備註 = {notes}";
    }
}
